package com.revature.project0;

public class Cars {
	
	int serialNumber;
	double offer;
	String make;
	int numPayments;
	double payments;
	boolean owned = false;
	
	public Cars(double initoffer, String make) {
		this.make = make;
		this.offer = initoffer;
		this.serialNumber = Project0.nextSerial;
		Project0.nextSerial+=1;
		this.numPayments = 6*24;
		this.payments = this.offer/this.numPayments;
	}
	
	

}
